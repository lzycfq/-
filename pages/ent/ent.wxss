.container{
  display: flex;
  justify-content: space-between;
}
/*分类 */
/*左边 */
.aside{
width: 24%;
font-size: 28rpx;
text-align: center;
border-right: 2rpx solid #bbb;
}
.aside .type-nav{
height:150rpx;
line-height:150rpx;
}
/*选中状态 */
.selected{
border-left: 6rpx solid orange;
color: orange;
}
/*右边 */
.content{
width: 70%;
margin: 0 auto;
}
#item-set-img{
width: 100%;
height: 240rpx;
margin-top: 20rpx;
}
.content .dish{
  display:flex;
flex-wrap: wrap;
text-align: center;
font-size: 26rpx;
}
.content .flex-item{
width: 48%;
background: #F7F8FC;
/* height: 280rpx; */
border-radius: 20rpx;
margin: 4rpx;
}
.flex-item image{
width:100%;
height: 200rpx;
margin: 2rpx;
}