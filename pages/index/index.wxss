/**index.wxss**/
.container {
  font-family: '微软雅黑';
}
.slide-image {
    display: block;
    height: 300rpx;
    width:100%
}
.menues {
  display:flex;
  margin: 0; 
}
.set-text{
 width: 100%;
  font-size:12px;
  text-align:center; 
} 
.menues text{
  font-size: 24rpx;
}
.men-block{
  width:25%;
  display:flex;
  flex-direction:column;
  align-items:center;
  font-size:12px;
  padding: 4px 5px;
  margin:24rpx 0;
}
.menue-image {
   width:100rpx;
   height:100rpx;
}
.menues span{
  font-size: 14px;
  border:  1px solid red;
  height: 15px;
}



.text-show{
  text-align: center;
  color: #000;
  font-size: 32rpx;
  border-bottom: 2rpx solid #C0D5E2;
  padding-bottom: 10rpx;
}
.text-show text{
  color: #1994E4; 
}



